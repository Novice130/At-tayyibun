# At-Tayyibun Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL="postgresql://user:password@localhost:5432/at_tayyibun?schema=public"

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL="redis://localhost:6379"

# =============================================================================
# AUTHENTICATION
# =============================================================================
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Firebase/Identity Platform
FIREBASE_PROJECT_ID=""
FIREBASE_CLIENT_EMAIL=""
FIREBASE_PRIVATE_KEY=""

# Google OAuth
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_CALLBACK_URL="http://localhost:3001/auth/google/callback"

# Facebook OAuth
FACEBOOK_APP_ID=""
FACEBOOK_APP_SECRET=""
FACEBOOK_CALLBACK_URL="http://localhost:3001/auth/facebook/callback"

# =============================================================================
# ENCRYPTION
# =============================================================================
# 32-byte hex key for AES-256-GCM (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=""

# =============================================================================
# GOOGLE CLOUD STORAGE
# =============================================================================
GCS_BUCKET_NAME="at-tayyibun-photos"
GCS_PROJECT_ID=""
# Path to service account JSON or leave empty for local dev
GOOGLE_APPLICATION_CREDENTIALS=""

# =============================================================================
# EMAIL (SendGrid)
# =============================================================================
SENDGRID_API_KEY=""
SENDGRID_FROM_EMAIL="noreply@at-tayyibun.com"
SENDGRID_FROM_NAME="At-Tayyibun"

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV="development"
API_PORT=3001
WEB_PORT=3000
API_URL="http://localhost:3001"
WEB_URL="http://localhost:3000"

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_WINDOW_MS=60000
RATE_LIMIT_BROWSE_MAX=60
RATE_LIMIT_BROWSE_WINDOW_MS=60000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
MEMBERSHIP_ENABLED=true
