# ===========================================
# At-Tayyibun Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control

# Node Environment
NODE_ENV=development

# ===========================================
# Database (Cloud SQL / Local PostgreSQL)
# ===========================================
DATABASE_URL="postgresql://user:password@localhost:5432/at_tayyibun?schema=public"

# ===========================================
# Redis (Memorystore / Local Redis)
# ===========================================
REDIS_URL="redis://localhost:6379"

# ===========================================
# Firebase / Google Cloud Identity Platform
# ===========================================
FIREBASE_PROJECT_ID="your-project-id"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk@your-project.iam.gserviceaccount.com"

# Client-side Firebase config
NEXT_PUBLIC_FIREBASE_API_KEY="your-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"

# ===========================================
# Google Cloud Storage
# ===========================================
GCS_BUCKET_NAME="at-tayyibun-photos"
GCS_BUCKET_AVATARS="at-tayyibun-avatars"

# ===========================================
# Encryption (Secret Manager in production)
# ===========================================
# AES-256-GCM key for biodata encryption (32 bytes, base64 encoded)
ENCRYPTION_KEY="your-base64-encoded-32-byte-key"
# Key ID for rotation support
ENCRYPTION_KEY_ID="v1"

# ===========================================
# SendGrid Email
# ===========================================
SENDGRID_API_KEY="SG.your-api-key"
SENDGRID_FROM_EMAIL="noreply@at-tayyibun.com"
SENDGRID_FROM_NAME="At-Tayyibun"

# ===========================================
# OAuth Providers
# ===========================================
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"

# Instagram (placeholder - requires Meta App Review)
# INSTAGRAM_CLIENT_ID=""
# INSTAGRAM_CLIENT_SECRET=""

# ===========================================
# API Configuration
# ===========================================
API_PORT=3001
API_URL="http://localhost:3001"
CORS_ORIGINS="http://localhost:3000"

# JWT (used for internal signed tokens)
JWT_SECRET="your-jwt-secret-min-32-chars"
JWT_EXPIRES_IN="7d"

# ===========================================
# Frontend Configuration
# ===========================================
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_WINDOW_MS=60000
RATE_LIMIT_SIGNUP_MAX=3
RATE_LIMIT_SIGNUP_WINDOW_MS=60000
RATE_LIMIT_BROWSE_MAX=100
RATE_LIMIT_BROWSE_WINDOW_MS=60000

# ===========================================
# Feature Flags
# ===========================================
MEMBERSHIP_ENABLED=false
